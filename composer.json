{
    "name": "gettext/robo",
    "type": "library",
    "description": "Robo tasks to manage gettext",
    "keywords": ["robo", "tasks", "js", "gettext", "i18n", "translation", "po", "mo"],
    "homepage": "https://github.com/php-gettext/Robo",
    "license": "MIT",
    "authors": [
        {
            "name": "Oscar Otero",
            "email": "oom@oscarotero.com",
            "homepage": "http://oscarotero.com",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "oom@oscarotero.com",
        "issues": "https://github.com/php-gettext/Robo/issues"
    },
    "require": {
        "php": "^7.2|^8.0",
        "gettext/gettext": "^5.0.0",
        "consolidation/robo": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Gettext\\Robo\\": "src"
        }
    },
    "require-dev": {
        "oscarotero/php-cs-fixer-config": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "suggest": {
        "gettext/json": "Is necessary to load and generate json files",
        "gettext/translator": "Is necessary to load and generate php array files"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix"
    }
}
